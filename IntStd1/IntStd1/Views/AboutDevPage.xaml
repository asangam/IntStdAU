                        <Label Text="Hello World" FontAttributes="Bold" FontSize="Medium" VerticalOptions="Center" HorizontalOptions="Center"/>
                        
                        <Image Source="ashesh" VerticalOptions="Center"  HorizontalOptions="Center"/>
                        <Label Text="Ashesh Shretha" VerticalOptions="Center" HorizontalOptions="Center"/>
                        
                        <BoxView  HorizontalOptions="FillAndExpand" HeightRequest="1" BackgroundColor="Silver"/>
                                                                         
                        <Image Source="saurav" VerticalOptions="Center"  HorizontalOptions="Center"/>
                        <Label Text="Saurav Maharjan" VerticalOptions="Center" HorizontalOptions="Center"/>
                        <BoxView  HorizontalOptions="FillAndExpand" HeightRequest="1" BackgroundColor="Silver"/>

                        <Image Source="sangam" VerticalOptions="Center"  HorizontalOptions="Center"/>
                        <Label Text="Sangam Adhikari" VerticalOptions="Center" HorizontalOptions="Center"/>
                        <Button Text="Github" Clicked="Button_Clicked" BorderRadius="5" BackgroundColor="Teal" TextColor="White"/>

                        <BoxView  HorizontalOptions="FillAndExpand" HeightRequest="1" BackgroundColor="Silver"/>

                        <Label Text="Internation Student:AU" VerticalOptions="Center" HorizontalOptions="Center"/>
